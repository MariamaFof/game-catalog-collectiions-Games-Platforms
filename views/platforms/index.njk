{% extends "layout/index.njk" %} {% block title %}
<title>GD: Platforms</title>
{% endblock %} {% block css %}
<link rel="stylesheet" href="/assets/styles/platforms.css" />
{% endblock %} {% block content %}
<div class="container">
  <h1>Platforms</h1> 

  <div class="platforms-list">
    {% for platform in platforms %}
    <div class="card p-3 mb-2 bg-dark text-white " style="width: 18rem">
      <img src="{{ platform.platform_logo.url }}" class="card-img-top" alt="{{ platform.name }}" />
      <div class="card-body">
        <h5 class="card-title">{{ platform.name }}</h5>
        <p class="card-text partial-text ">{{ platform.summary }}</p>
        <a href="/platforms/{{ platform.slug }}" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
    {% endfor %}
    <!-- <img src="/assets/images/icon.jpg" class="img-fluid" alt="icon" /> -->
  </div>
  {% endblock %}
</div>
